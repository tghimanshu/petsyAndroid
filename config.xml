<?xml version='1.0' encoding='utf-8'?>
<widget id="com.petsyHome.Main" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>My Petsy Home</name>
    <description>
    Your Pet Deserves the best.
    </description>
    <icon src="www/app-logo.PNG" platform="android" width="57" height="57" density="mdpi" />

    <author email="himanshugohil234@gmail.com" href="http://tghimanshu.github.io">
        My Petsy Home Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
